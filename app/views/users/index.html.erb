<h1>All users</h1>

<%= page_navigation_links(@users) %>

<ul>
  <% @users.each do |user| -%>
    <li>
    <%= gravatar_for user, :size => 30 %>
    <%= link_to user.name, user %>
    <% if current_user.admin? -%>
      <%= link_to "delete", user, :method => :delete, :confirm => "Sure?" %>
    <% end -%>
    </li>
  <% end -%>
</ul>

<%= page_navigation_links(@users) %>
