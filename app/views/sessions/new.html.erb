<h1>Login</h1>
<p>these are sign in forms.</p>

<%= form_for(:session, :url => sessions_path, :html => {:class => "form-horizontal"}) do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :email, :class => "control-label" %>
      <div id="" class="controls">
        <%= f.text_field :email, :class => "input-xlarge" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password, :class => "control-label" %>
      <div id="" class="controls">
        <%= f.password_field :password, :class => "input-xlarge" %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Login", :class => "btn btn-primary" %>
      <p class="help-block">New user? <%= link_to "Sign up here!", signup_path %></p>
    </div>

  </fieldset>
<% end -%>



